#!/usr/bin/env bash

ARR=(
    ~/.Xresources
    ~/.bashrc
    ~/.config/alacritty/alacritty.yml
    ~/.config/aliases
    ~/.config/bmdirs
    ~/.config/bspwm/autostart.sh
    ~/.config/bspwm/bspwmrc
    ~/.config/nvim/init.vim
    ~/.config/sxhkd/sxhkdrc
    ~/.config/vars
    ~/.gitconfig
    ~/.ssh/config
    ~/.tmux.conf
    ~/.vim/vimrc
    ~/.zshrc
    )

PLIK=$(printf '%s\n' "${ARR[@]}"|fzf)

if [ "$PLIK" ]; then
   $EDITOR "$PLIK"
fi
