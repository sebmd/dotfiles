#!/usr/bin/env bash

#ARR[0]=$HOME/.aliases
#ARR[1]=$HOME/.config/alacritty/alacritty.yml
#ARR[2]=$HOME/.bashrc
#ARR[3]=$HOME/.config/bspwm/bspwmrc
#ARR[5]=$HOME/.gitconfig
#ARR[6]=$HOME/.config/nvim/init.vim
#ARR[7]=$HOME/.ssh/config
#ARR[8]=$HOME/.config/sxhkd/sxhkdrc
#ARR[9]=$HOME/.tmux.conf
#ARR[10]=$HOME/.vim/vimrc
#ARR[11]=$HOME/.Xresources
#ARR[12]=$HOME/.zshrc

ARR=(
    ~/.Xresources
    ~/.bashrc
    ~/.config/alacritty/alacritty.yml
    ~/.config/aliases
    ~/.config/bmdirs
    ~/.config/bspwm/autostart.sh
    ~/.config/bspwm/bspwmrc
    ~/.config/nvim/init.vim
    ~/.config/sxhkd/sxhkdrc
    ~/.config/vars
    ~/.gitconfig
    ~/.ssh/config
    ~/.tmux.conf
    ~/.vim/vimrc
    ~/.zshrc
    )

PLIK=$(printf '%s\n' "${ARR[@]}"|fzf)

if [ "$PLIK" ]; then
   $EDITOR "$PLIK"
fi
